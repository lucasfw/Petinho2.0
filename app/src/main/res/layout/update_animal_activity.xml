<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundoGeral"
    tools:context="com.example.lucascarvalho.adopet.MainActivity">

    <EditText
        android:id="@+id/edtLocalizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroupSexo"
        android:ems="10"
        android:hint="Localização"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnImg1"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Imagem 1"
        android:textSize="10sp"
        android:background="#0071bc"
        android:textColor="#ffffff"
        android:layout_above="@+id/btnListar"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnImg4"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="#0071bc"
        android:textColor="#ffffff"
        android:text="Imagem 4"
        android:textSize="10sp"
        android:layout_below="@+id/img4"
        android:layout_alignStart="@+id/btnListar" />

    <Button
        android:id="@+id/btnImg3"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Imagem 3"
        android:textSize="10sp"
        android:background="#0071bc"
        android:textColor="#ffffff"
        android:layout_below="@+id/img3"
        android:layout_alignStart="@+id/img3" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginEnd="11dp"
        android:layout_alignTop="@+id/img1"
        android:layout_toStartOf="@+id/btnImg3" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="false"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_above="@+id/btnImg1"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnImg2"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="Imagem 2"
        android:textSize="10sp"
        android:background="#0071bc"
        android:textColor="#ffffff"
        android:layout_below="@+id/img2"
        android:layout_alignStart="@+id/img2" />

    <Button
        android:id="@+id/btnAdicionar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#0071bc"
        android:text="Adicionar"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/edtIdade" />

    <Button
        android:id="@+id/btnListar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginEnd="7dp"
        android:layout_alignTop="@+id/img2"
        android:layout_toStartOf="@+id/img4" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/img3"
        android:layout_alignStart="@+id/btnImg4" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edtIdade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtNome"
        android:ems="10"
        android:hint="Idade"
        android:inputType="textPersonName" />

    <RadioGroup
        android:id="@+id/radioGroupPorte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtIdade"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:id="@+id/rdbtnPequeno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pequeno" />

        <RadioButton
            android:id="@+id/rdbtnMedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Médio" />

        <RadioButton
            android:id="@+id/rdbtnGrande"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/img1"
            android:layout_below="@+id/edtIdade"
            android:layout_marginEnd="22dp"
            android:layout_weight="1"
            android:text="Grande" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroupPorte"
        android:layout_marginTop="19dp"
        android:text="Espécie:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Espécie:"
        android:textSize="18sp"
        android:layout_below="@+id/radioGroupEspecie"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtIdade"
        android:text="Porte:"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radioGroupEspecie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:id="@+id/rdbtnGato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gato" />

        <RadioButton
            android:id="@+id/rdbtnCachorro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cachorro" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:id="@+id/rdbtnMacho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Macho" />

        <RadioButton
            android:id="@+id/rdbtnFemea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fêmea" />

    </RadioGroup>

</RelativeLayout>